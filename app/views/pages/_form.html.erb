<%= javascript_include_tag :ckeditor %>
<%= form_for @page do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
	<%= f.cktext_area :content, :toolbar => 'Full', :width => '100%', :height => '200px' %>
  </p>
  <p><%= f.submit %></p>
<% end %>
