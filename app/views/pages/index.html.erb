<% title "Pages" %>
<p><%= link_to "New Page", new_page_path %></p>
<div id="pages" name="pages">
	<h3>pages list</h3>
	
	<ul id="page-list" name="page-list">
		<% for page in @pages %>
		<li><%= link_to page.title, page %> |
			<%= link_to "Edit", edit_page_path(page) %> |
			<%= link_to "Destroy", page, :confirm => 'Are you sure?', :method => :delete %></li>
		<% end %>
	</ul>
</div>


