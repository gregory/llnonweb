<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= current_user.email%>
	Avatar actuel: <%= image_tag avatar_url current_user %><br />
	<%= f.label :avatar_url %> <br/>
    <%= f.text_field :avatar_url, :value => "#{avatar_url current_user}" %> 
  </div>
  <div class="field">
    <%= f.label :fname %><br />
    <%= f.text_field :fname %>
  </div>
  <div class="field">
    <%= f.label :lname %><br />
    <%= f.text_field :lname %>
  </div>
 <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
	<%= f.label :gender %><br />
	<%= f.select_tag(:gender, options_for_select(Profile::VALID_GENDER, Profile::VALID_GENDER.last)) %>
    
    
  </div>
  <div class="field">
    <%= f.label :birthdate %><br />
    <%= f.date_select :birthdate, :start_year => Profile::BEGIN_DATE,
 									:end_year => Time.now.year,
									:include_blank => true,
									:order => [:month, :day, :year]%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
