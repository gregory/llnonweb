<h1>Listing profiles</h1>

<table>
  <tr>
	<th>gravatar</th>
    <th>Fname - Lname</th>
	<th></th>
  </tr>
<% @profiles.each do |profile| %>
  <tr>
	<td><%= link_to (image_tag avatar_url profile.user), profile %></td>

    <td><%= link_to  "#{profile.lname} #{profile.fname}", profile  %></td>
<td>
<% if !current_user.nil? and current_user.id.equal? profile.user_id %>
    [<%= link_to 'Edit', edit_profile_path(profile) %> |
    <%= link_to 'Destroy', profile, :confirm => 'Are you sure?', :method => :delete %>]
<% end %>
</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Profile', new_profile_path %>
